{
  "$schema": "https://opencode.ai/config.json",
  "keybinds": {
    "input_newline": "shift+enter",
    "session_interrupt": "<leader>escape",
  },
  "agent": {
    "docassist": {
      "description": "Fetch up-to-date documentation using context7 mcp, return a digest",
      "mode": "subagent",
      "model": "openai/gpt-5-nano",
      // Can't use {file:}, it crashes opencode
      //"prompt": "{file:./prompts/agent/docsynth.txt}",
      "prompt": "You are a documentation assistant. You use context7, returns a lossless digest of the topic you were asked for.",
      "tools": {
        "webfetch": false,
        "write": false,
        "edit": false,
        "bash": false
      }
    }
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
      },
      "enabled": true
    }
  },
  "plugin": [
    // Comment to use the API key
    // "opencode-openai-codex-auth"
  ],
  "provider": {
    "openai": {
      "options": {
        "apiKey": "{env:OPENAI_API_KEY}",
        "reasoningEffort": "medium",
        "reasoningSummary": "concise",
        "textVerbosity": "low",
        "include": [
          "reasoning.encrypted_content"
        ],
        "store": false
      },
    }
  }
}
